<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orihd.orihd">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="OriHD"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="OriHD"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".Home" />
        <activity android:name=".friends" />
        <activity android:name=".mypet" />
        <activity android:name=".Guidance" />
        <activity android:name=".FragmentTab1" />
        <activity android:name=".FragmentTab2" />
        <activity android:name=".FragmentTab3" />
        <activity
            android:name=".Homemenu"
            android:label="@string/title_activity_homemenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsPage"
            android:label="@string/title_activity_settings_page" />
        <activity android:name=".Settings" />
        <activity android:name=".customize"></activity>
    </application>

</manifest>