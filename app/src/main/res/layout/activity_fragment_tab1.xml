<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/compressvicky2"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="orihd.orihd.Home">


    <TextView
        android:text="Welcome to OriHD"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="700dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/NameText" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/emptyface"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <com.bikomobile.donutprogress.DonutProgress
        android:id="@+id/donut_progress3"
        android:layout_width="100dp"
        app:donut_finished_color="@color/purple"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/donut_progress"
        android:layout_toRightOf="@+id/imageView3"
        app:donut_finished_stroke_width="10dp"
        app:donut_unfinished_stroke_width="10dp"
        android:layout_toEndOf="@+id/imageView3" />

    <com.bikomobile.donutprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:donut_finished_color="@color/lightblue"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <TextView
        android:text="AQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_above="@+id/donut_progress"
        android:layout_alignRight="@+id/donut_progress"
        android:layout_alignEnd="@+id/donut_progress"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:text="Particulates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/textView13"
        android:textSize="20dp"
        android:layout_below="@+id/donut_progress"
        android:layout_alignLeft="@+id/donut_progress2"
        android:layout_alignStart="@+id/donut_progress2"
        android:layout_marginTop="48dp" />

    <com.bikomobile.donutprogress.DonutProgress
        android:id="@+id/donut_progress2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:donut_finished_color="@color/particulates"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/donut_progress"
        android:layout_alignStart="@+id/donut_progress" />

    <com.bikomobile.donutprogress.DonutProgress
        android:id="@+id/donutProgress4"
        android:layout_width="100dp"
        app:donut_finished_color="@color/green"
        android:layout_height="100dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/donut_progress3"
        android:layout_alignStart="@+id/donut_progress3" />

    <TextView
        android:text="Battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignRight="@+id/donutProgress4"
        android:layout_alignEnd="@+id/donutProgress4"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Harmful Gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/donut_progress3"
        android:layout_alignRight="@+id/donut_progress3"
        android:layout_alignEnd="@+id/donut_progress3" />

</RelativeLayout>
