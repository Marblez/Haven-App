<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="orihd.orihd.Home">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/emptyface"
        android:id="@+id/imageView3"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressBar2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="20dp"
        android:id="@+id/textSwitcher" />

    <TextView
        android:text="30%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="Working Class"
        android:layout_width="wrap_content"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/NameText"
        android:layout_alignLeft="@+id/NameText"
        android:layout_alignStart="@+id/NameText" />


    <TextView
        android:text="45%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtview"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Ambient air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Particulates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textSwitcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarFilter"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="130dp"
        android:progress="45"
        android:progressTint="@color/yellow"
        android:layout_below="@+id/progressBar2"
        android:layout_alignLeft="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2" />

    <TextView
        android:text="Air Filter "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/progressBar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar4"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="130dp"
        android:progress="30"
        android:progressTint="@color/green"
        android:layout_below="@+id/progressBarBattery"
        android:layout_alignLeft="@+id/progressBarBattery"
        android:layout_alignStart="@+id/progressBarBattery"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/progressBar4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="63%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="User's Name"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:id="@+id/NameText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/progressBar2"
        android:layout_alignEnd="@+id/progressBar2" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarBattery"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="130dp"
        android:progress="63"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/progressBar3"
        android:layout_alignLeft="@+id/progressBar3"
        android:layout_alignStart="@+id/progressBar3" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3"
        android:progressTint="@color/com_facebook_button_send_background_color"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="130dp"
        android:progress="30"
        android:layout_below="@+id/progressBarFilter"
        android:layout_alignLeft="@+id/progressBarFilter"
        android:layout_alignStart="@+id/progressBarFilter" />

    <TextView
        android:text="30%"
        android:paddingTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignRight="@+id/textSwitcher"
        android:layout_alignEnd="@+id/textSwitcher" />

    <TextView
        android:text="Harmful Gas"
        android:layout_width="20dp"
        android:paddingTop="7dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/progressBarFilter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:text="63%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtview5"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/textSwitcher"
        android:layout_alignEnd="@+id/textSwitcher" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="130dp"
        android:progress="30"
        android:progressTint="@color/colorPrimary"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

</RelativeLayout>
